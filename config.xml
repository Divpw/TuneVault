<?xml version='1.0' encoding='utf-8'?>
<widget id="com.tunevault.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>TuneVault</name>
    <description>A premium music player app.</description>
    <author email="your-email@example.com">Your Name</author>
    <content src="index.html"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
    <preference name="android-minSdkVersion" value="24"/>
    <preference name="android-targetSdkVersion" value="34"/>
    <plugin name="cordova-plugin-file" source="npm" />
</widget>